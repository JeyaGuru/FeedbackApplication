@model CommentApplication.ViewModel.SignUpViewModel
@{
    ViewBag.Title = "SignUp";
}

<h2>Sign Up</h2>


<div>
    @using (Html.BeginForm("SaveSignUpDetails", "Account"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
              <div class="row" style="text-align:left;">
                  <h5>
                      Already have an account?
                      <a href="~/Account/SignIn">Sign In</a>
                  </h5>
                  <br />
              </div>
        <div class="row" >
            <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
        </div><br />
        <div class="row" >
            <div class="col-lg-2">@Html.LabelFor(a => a.Password)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
        </div><br />
        <div class="row" >
            <div class="col-lg-2">@Html.LabelFor(a => a.SecretCode)</div>
            <div class="col-lg-10">@Html.TextBoxFor(a => a.SecretCode, new { @class = "form-control" })</div>
        </div><br />
        <input type="submit" value="Sign Up" class="btn btn-primary" /><br />
        <div class="row"  style="text-align:left;">
            <br />
            <h5>
                By clicking the 'Sign Up' button, you are creating an account, and you agree to the Terms of Use.               
            </h5>
        </div>
    }

</div>