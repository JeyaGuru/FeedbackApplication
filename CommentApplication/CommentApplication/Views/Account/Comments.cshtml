@using CommentApplication.Models
@model  IEnumerable<CommentApplication.ViewModel.UserCommentViewModel>
@{
    /**/

    ViewBag.Title = "Comments";
}
<style>
    #top {
        position: page;
        left: 0;
        right: 0;
        height: 50%;
    }

    #bottom {
        position: page;
        left: 0;
        right: 0;
        height: 50%;
    }

    #top {
        top: 0;
        background-color: white;
    }

    #bottom {
        bottom: 0;
        background-color: white;
    }
</style>

<body>

    <div class="form-group">
        <div style="color:red;">@Html.ValidationSummary()</div>
        <div class="row">
            <!--Show details are saved successfully message-->
            <div class="col-lg-12">@ViewBag.Message</div>
        </div><br />
        <div id="top">
            <div>                
                <div class="form-group">
                    <form action="/Account/SaveUserComment" method="post">
                        <p>What would you like to share with world?</p>
                        <textarea id="Comment" name="Comment" rows="4" cols="50"></textarea>
                        <button type="Submit" class="btn btn-primary">Post</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="form-group" id="bottom">
            <h1>Comment's</h1>
            <div>
                <div style="text-align:center">
                    <button type="Submit" class="btn btn-primary">Filter</button>
                </div>
                <br />
                <div class="form-group">
                    @foreach (var userComment in Model)
                    {
                        <div class="row">
                            <div class="col-lg-2" style="text-align:right">
                                <p>@userComment.Email, @userComment.CreatedTime </p>
                            </div>

                            <div class="col-lg-8" style="text-align:center">
                                <textarea rows="4" cols="50" disabled>@userComment.Comment</textarea>
                            </div>
                            <br />
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</body>
